<div class="well">
  <%= form_for @post do |f| %>
  
      <div class="field form-group">
        <%= f.label :title %><br>
        <%= f.text_field :title, class: 'form-control' %><br>
      </div>
      <div class="field form-group">
        <%= f.label :body %><br>
        <%= f.text_area :body, class: 'form-control' %><br>
      </div>
      <div class="actions form-group">
        <%= f.submit 'Submit', class: 'btn btn-default' %>
      </div>
    
  <% end %>
</div>
