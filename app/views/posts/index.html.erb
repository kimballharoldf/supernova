<% @posts.each do |post| %>
    <div class= "container">
        <h3><%= link_to post.title, post %></h3>
        <h6>Posted on: <%= post.created_at.strftime("%B, %d, %Y") %></h6>
        <div class="well well-sm">
            <p><%= simple_format(post.body) %></p>
        </div>
    </div>
<% end %>