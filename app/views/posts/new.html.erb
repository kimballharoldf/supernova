<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h3>New Post</h3>
       <div class="well">
        <%= form_for :post, url: posts_path do |f| %>
        
            <%= f.label :title %><br>
            <%= f.text_field :title %><br>
            
            <%= f.label :body %><br>
            <%= f.text_area :body %><br>
            
            <%= f.submit %>
          
        <% end %>
      </div>
    </div>
  </div>
</div>